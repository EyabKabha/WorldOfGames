pipeline {
    agent any
    environment {
        DOCKERHHUB_CREDENTIALS=credentials('dockerhub')
    }
    stages{
        stage("Checkout"){
            steps{
                git branch: 'main' , url:'https://github.com/EyabKabha/WorldOfGames.git'
            }
        }
        stage("Build"){
            steps{
                bat 'docker build -t worldofgames .'
            }
        }
        stage("Run"){
            steps{
                bat 'docker run -d -p 8777:8777 worldofgames'
            }
        }
        stage("Test"){
            steps{
                bat 'python ./tests/e2e.py'
            } 
        }
	stage('Login') {
		steps {
		withCredentials([string(credentialsId: 'eyabtest', variable: 'dockerhubpwd')]) {
		bat "echo docker login -u eyabtest -p ${dockerhubpwd}"
		}
		
 	    }
	}
        stage("Finalize"){
            steps{
                bat 'docker push eyabtest/worldofgames:latest'
            } 
        }
    }
    post {
        always{
            bat 'docker logout'
        }
    }
}
