pipeline {
    agent any
    enviroment {
        DOCKER_CREDENTIALS = credentials('worldofgames-dockerhub')
    }
    stages{
        stage("Checkout"){
            steps{
                git branch: 'main' , url:'https://github.com/EyabKabha/WorldOfGames.git'
            }
        }
        stage("Build"){
            steps{
                bat 'docker build -t worldofgames .'
            }
        }
        stage("Run"){
            steps{
                bat 'docker run -d -p 8777:8777 worldofgames'
            }
        }
        stage("Test"){
            steps{
                bat 'python ./tests/e2e.py'
            } 
        }
        stage("Finalize"){
            steps{
                bat 'echo $DOCKER_CREDENTIALS_PSW | docker login -u $DOCKER_CREDENTIALS_USR --password-stdin'
                bat 'docker push eyabtest/worldofgames'
            } 
        }
    }
}
