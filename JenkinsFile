pipeline {
    agent any
    environment {
        DOCKERHHUB_CREDENTIALS=credentials('dockerhub')
    }
    stages{
        stage("Checkout"){
            steps{
                git branch: 'main' , url:'https://github.com/EyabKabha/WorldOfGames.git'
            }
        }
        stage("Build"){
            steps{
                bat 'docker build -t worldofgames .'
            }
        }
        stage("Run"){
            steps{
                bat 'docker run -d -p 8777:8777 worldofgames'
            }
        }
        stage("Test"){
            steps{
                bat 'python ./tests/e2e.py'
            } 
        }
		stage('Login') {
			steps {
				bat 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
        stage("Finalize"){
            steps{
                bat 'docker push eyabtest/worldofgames'
            } 
        }
    }
    post {
        always{
            bat 'docker logout'
        }
    }
}
